# Environment Configuration
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ecopilot
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password
MONGO_DATABASE=ecopilot

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis123

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# API Configuration
PORT=3000
FRONTEND_URL=http://localhost:3001
API_URL=http://localhost:3000

# Email Configuration
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@ecopilot.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# External API Keys
OPENWEATHER_API_KEY=your-openweather-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3000/api
REACT_APP_SOCKET_URL=http://localhost:3000
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Mobile Configuration
REACT_NATIVE_API_URL=http://localhost:3000/api
REACT_NATIVE_SOCKET_URL=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:3001
HELMET_ENABLED=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development
ENABLE_SWAGGER=true
ENABLE_DEBUG=true

# Production Overrides (uncomment for production)
# NODE_ENV=production
# MONGODB_URI=mongodb://mongodb:27017/ecopilot
# REDIS_URL=redis://redis:6379
# FRONTEND_URL=https://ecopilot.com
# API_URL=https://api.ecopilot.com